{
    "name": "laraveldesign/trix",
    "description": "Adds Trix editor to Laravel websites using the T.A.L.L. stack.",
    "keywords": [
        "laraveldesign",
        "trix"
    ],
    "homepage": "https://github.com/laraveldesign/trix",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Shane Barron",
            "email": "cshanebarron@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {


    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Laraveldesign\\Trix\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Laraveldesign\\Trix\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Laraveldesign\\Trix\\TrixServiceProvider"
            ],
            "aliases": {
                "Trix": "Laraveldesign\\Trix\\TrixFacade"
            }
        }
    }
}
